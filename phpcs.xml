<?xml version="1.0"?>
<ruleset name="TaxiApp">
    <description>PHP CodeSniffer configuration for Taxi Management System</description>

    <!-- Files to check -->
    <file>app/</file>
    <file>public/index.php</file>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        <!-- Allow long lines for some cases -->
        <exclude name="Generic.Files.LineLength"/>
        <!-- Allow missing doc comments (will be added gradually) -->
        <exclude name="Squiz.Commenting.FunctionComment"/>
        <exclude name="Squiz.Commenting.VariableComment"/>
        <!-- Allow mixed indentation for legacy code -->
        <exclude name="Generic.WhiteSpace.ScopeIndent"/>
        <exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
        <!-- Allow some spacing issues -->
        <exclude name="Squiz.ControlStructures.ControlSignature"/>
        <exclude name="Squiz.WhiteSpace.ScopeClosingBrace"/>
        <!-- Allow some PHP type hints issues -->
        <exclude name="PSR1.Classes.ClassDeclaration"/>
        <exclude name="Generic.Files.OneClassPerFile"/>
    </rule>

    <!-- Additional rules -->
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    <rule ref="Generic.Commenting.Todo"/>
    <rule ref="Generic.Formatting.MultipleStatementAlignment"/>
    <rule ref="Generic.PHP.DeprecatedFunctions"/>
    <rule ref="Generic.PHP.ForbiddenFunctions"/>
    <rule ref="Squiz.Commenting.FunctionComment"/>
    <rule ref="Squiz.Commenting.VariableComment"/>
    <rule ref="Squiz.ControlStructures.ControlSignature"/>
    <rule ref="Squiz.WhiteSpace.ScopeClosingBrace"/>

    <!-- Security rules -->
    <rule ref="Squiz.PHP.Eval"/>
    <rule ref="Squiz.PHP.GlobalKeyword"/>
    <rule ref="Generic.PHP.BacktickOperator"/>

    <!-- Custom rules for this project -->
    <!-- Allow camelCase for method names (common in this codebase) -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>app/</exclude-pattern>
    </rule>

    <!-- Allow underscores in method names for helpers -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>app/helpers/</exclude-pattern>
    </rule>

    <!-- Configure line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Configure file extensions -->
    <arg name="extensions" value="php"/>
    <arg name="colors"/>
    <arg value="p"/>
</ruleset>
