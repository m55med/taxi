<?xml version="1.0"?>
<ruleset name="TaxiApp"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        PHPMD configuration for Taxi Management System
    </description>

    <rule ref="rulesets/codesize.xml">
        <!-- Too many fields in a class -->
        <exclude name="TooManyFields"/>
        <!-- Excessive class length -->
        <exclude name="ExcessiveClassLength"/>
    </rule>

    <rule ref="rulesets/controversial.xml">
        <!-- Allow camelCase variables -->
        <exclude name="CamelCaseVariableName"/>
        <!-- Allow superglobals -->
        <exclude name="Superglobals"/>
    </rule>

    <rule ref="rulesets/design.xml">
        <!-- Allow eval (though we check for it in PHPCS) -->
        <exclude name="EvalExpression"/>
        <!-- Allow goto (though rarely used) -->
        <exclude name="GotoStatement"/>
    </rule>

    <rule ref="rulesets/naming.xml">
        <!-- Allow short variable names in some contexts -->
        <exclude name="ShortVariable"/>
        <!-- Allow long variable names -->
        <exclude name="LongVariable"/>
    </rule>

    <rule ref="rulesets/unusedcode.xml">
        <!-- Check for unused private methods -->
        <exclude name="UnusedPrivateMethod"/>
        <!-- Check for unused local variables -->
        <exclude name="UnusedLocalVariable"/>
    </rule>

    <!-- Custom rules for this project -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="10"/>
        </properties>
    </rule>

    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="200"/>
        </properties>
    </rule>
</ruleset>
