{
    "name": "taxi/app",
    "description": "Taxi Management System",
    "type": "project",

    "require": {
        "php": ">=7.4",
        "phpoffice/phpspreadsheet": "^4.3",
        "vlucas/phpdotenv": "^5.6",
        "ezyang/htmlpurifier": "^4.18",
        "monolog/monolog": "^3.9",
        "phpmailer/phpmailer": "^6.10",
        "tecnickcom/tcpdf": "^6.10",
        "league/csv": "^9.24"
    },

    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.10",
        "phpmd/phpmd": "^2.15",
        "phpcompatibility/php-compatibility": "^9.3"
    },

    "config": {
        "platform": {
            "php": "8.4.0"
        },
        "audit": {
            "ignore": [
                "PKSA-64jn-3d9t-gncx"
            ]
        }
    },

    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers/session_helper.php",
            "app/helpers/url_helper.php",
            "app/helpers/export_helper.php",
            "app/helpers/help_helper.php",
            "app/helpers/view_helper.php",
            "app/helpers/DateTimeHelper.php"

        ]
    },

    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
