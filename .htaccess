<IfModule mod_rewrite.c>
    RewriteEngine On

    # Handle the root directory request
    RewriteRule ^$ public/ [L]
    
    # Handle all other requests by forwarding them to the public directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
